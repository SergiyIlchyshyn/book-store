
<div class="jumbotron">
    <div class="container">
        <h1>{{title}}</h1>
    </div>
</div>

<div class="container">
   
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>ISBN</th>
                        <th>PRICE</th>
                        <th>&nbsp;</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each books}}
                    <tr>
                        <td>{{name}}</td>
                        <td>{{isbn}}</td>
                        <td>{{price}}</td>
                        <td>
                            <a href="/edit/{{id}}" class="btn btn-primary">
                                <span class="glyphicon glyphicon-pencil"></span> 
                            </a> | 
                            <a href="/delete/{{id}}" class="btn btn-danger">
                                <span class="glyphicon glyphicon-trash"></span>
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                    
                </tbody>
            </table>
            
        </div>
    </div>
    <div class="row">
        <a href="/create" class="btn btn-primary btn-lg">CREATE</a>
    </div>
    
</div>


